{
  "name": "Range for Chrome",
  "version": "1.0.5",
  "description": "Capture work from your browser based tools and share progress with your team.",
  "permissions": ["storage", "cookies", "https://api.range.co/*"],
  "browser_action": {
    "default_popup": "popup/popup.html",
    "default_title": "Range",
    "default_icon": {
      "16": "assets/images/icon16.png",
      "32": "assets/images/icon32.png",
      "48": "assets/images/icon48.png",
      "128": "assets/images/icon128.png"
    }
  },
  "background": {
    "persistent": false,
    "scripts": ["background/api.js", "background/account.js", "background/suggestions.js"]
  },
  "content_scripts": [
    {
      "matches": ["https://app.apollo.io/*"],
      "js": ["sites/_base.js", "sites/apollo.js"]
    },
    {
      "matches": ["https://*.atlassian.net/wiki/*"],
      "js": ["sites/_base.js", "sites/confluence.js"]
    },
    {
      "matches": ["https://www.figma.com/*"],
      "js": ["sites/_base.js", "sites/figma.js"]
    },
    {
      "matches": ["https://paper.dropbox.com/*"],
      "js": ["sites/_base.js", "sites/dropbox.js"]
    },
    {
      "matches": ["https://*.quip.com/*"],
      "js": ["sites/_base.js", "sites/quip.js"]
    },
    {
      "matches": ["https://medium.com/*"],
      "js": ["sites/_base.js", "sites/medium.js"]
    }
  ],
  "icons": {
    "16": "assets/images/icon16.png",
    "32": "assets/images/icon32.png",
    "48": "assets/images/icon48.png",
    "128": "assets/images/icon128.png"
  },
  "content_security_policy": "default-src 'self' ; connect-src https://api.range.co ; img-src https://range.imgix.net",
  "manifest_version": 2
}
